                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:rating="4"
