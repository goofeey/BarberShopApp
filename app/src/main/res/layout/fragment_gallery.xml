                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Modern cuts"
                    android:textStyle="italic"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/barbershop">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Wide imagination"
                    android:textStyle="italic"
                    android:textColor="@color/barbershop">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Always in a good mood"
                    android:textStyle="italic"
                    android:textColor="@color/barbershop">
                </TextView>

                <RatingBar
